<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dip"
    android:stretchColumns="1" >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/text_AddRepartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Repartidores" />
    </LinearLayout>

    <TableRow>

        <TextView
            android:id="@+id/text_idrep"
            android:text="IdRepartidor" />
        <EditText
            android:id="@+id/edit_idRepartidor"
            android:inputType="number"
            android:maxLength="10" />
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/text_nomrep"
            android:text="Nombre" />
        <EditText
            android:id="@+id/edit_NomRepartidor"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/text_ApeRepartidor"
            android:text="Apellido" />
        <EditText
            android:id="@+id/edit_ApeRepartidor"
            android:inputType="text"
            android:maxLength="1" />
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/text_telrep"
            android:text="Telefono" />
        <EditText
            android:id="@+id/edit_TelRepartidor"
            android:inputType="text"
            android:maxLength="1" />
    </TableRow>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button_aceptar_editrep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limpiar" />

        <Button
            android:id="@+id/button_limpiar_editrep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aceptar" />
    </LinearLayout>

</TableLayout>